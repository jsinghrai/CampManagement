<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hospital.hospitalapp.doctormodule.DoctorDisplayActivity">


    <Button
        android:id="@+id/btn_cancel_event"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="CANCEL EVENT"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="192dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/btn_logout"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_pname"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/buttonrounded"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_pid"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:text="TextView"
        android:background="@drawable/buttonrounded"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_cancel_event"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_above="@+id/btn_view_documents"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_view_appointments"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="book appointment"
        android:background="@drawable/buttonrounded"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_status"
        android:layout_alignLeft="@+id/btn_logout"
        android:layout_alignStart="@+id/btn_logout"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/btn_view_documents"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="documents"
        android:layout_below="@+id/tv_pname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonrounded"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/btn_status"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="View appointment status"
        android:background="@drawable/buttonrounded"
        android:textColor="#ffffff"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn_view_documents"
        android:layout_alignLeft="@+id/btn_view_documents"
        android:layout_alignStart="@+id/btn_view_documents" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@drawable/buttonrounded"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_view_appointments"
        android:layout_alignLeft="@+id/btn_status"
        android:layout_alignStart="@+id/btn_status"
        android:layout_marginTop="25dp" />
</RelativeLayout>
